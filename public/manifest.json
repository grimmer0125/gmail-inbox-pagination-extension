{
  "manifest_version": 2,
  "name": "Gmail",
  "description": "Gmail test",
  "version": "1.0.0",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },

  "browser_action": {
    "default_title": "gmail-test"
  },
  "permissions": [
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
   {
     "matches": ["https://mail.google.com/*"],
     "run_at": "document_end",
     "css": ["/static/css/content.css"],
     "js": ["/static/js/content.js"]
   }
  ]
}
